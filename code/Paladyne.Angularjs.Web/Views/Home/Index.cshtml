<!DOCTYPE html>
<html ng-app="main">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Paladyne test</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/kendo/kendo.common-bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/kendo/kendo.bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/toastr.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/angular-csp.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <pt-navbar></pt-navbar>

    <div class="container body-content">
        <div>
            <h1>Bootstrap starter template</h1>
            <p class="lead">
                Use this document as a way to quickly start any new project.<br>
                All you get is this text and a mostly barebones HTML document.
            </p>
            @(Html.Kendo().DatePicker().Name("datepicker").Deferred())
            <p>
                <a id="btnInvoke" class="btn btn-default" href="#" role="button">Invoke</a>
            </p>
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/kendo/kendo.all.min.js"></script>
    <script src="~/Scripts/toastr.js"></script>
    <script src="~/Scripts/angular.js"></script>
    @Html.Kendo().DeferredScripts()
    
    
    <script src="~/App/welcome/welcome.js"></script>
    <script src="~/App/welcome/greetingsCtrl.js"></script>
    <script src="~/App/welcome/greetingsDirective.js"></script>

    <script src="~/App/app.js"></script>
    <script src="~/App/common/popupSvc.js"></script>
    <script src="~/App/common/authSvc.js"></script>
    <script src="~/App/common/authInfo.js"></script>
    <script src="~/App/common/navbarCtrl.js"></script>
    <script src="~/App/common/navbarDirective.js"></script>
    <script src="~/App/common/navbarAuthFormCtrl.js"></script>
    <script src="~/App/common/navbarAuthFormDirective.js"></script>

    <script type="text/javascript">
        var token = null;

        $(function () {
            $("#btnInvoke").click(function () {
                var headers = {};
                if (token) {
                    headers.Authorization = 'Bearer ' + token;
                }

                $.ajax({
                    type: 'GET',
                    url: 'api/users/1',
                    headers: headers
                }).done(function (data) {
                    console.log(data);
                }).fail(function () {
                    console.log(arguments);
                });
            });
        });
    </script>
</body>
</html>
